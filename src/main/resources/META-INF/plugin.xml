<idea-plugin>
    <id>com.brennanpowers.plugins.StaticCopyMethodGenerator</id>
    <name>Create Static Copy Method</name>
    <vendor email="brennanpowers@gmail.com" url="https://github.com/brennanpowers">Brennan Powers</vendor>

    <description><![CDATA[
    Creates a static copy method for the target class.<br>
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
    </extensions>

    <actions>
        <!-- Add your actions here -->
        <action id="CreateStaticCopyMethodAction" class="CreateStaticCopyMethodAction"
                text="Create Static Copy Method" description="Create a static copy method for this class">
            <add-to-group group-id="GenerateGroup" anchor="last"/>
        </action>
    </actions>
</idea-plugin>